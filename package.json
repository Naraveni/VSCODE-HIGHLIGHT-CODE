{
  "name": "highlight-code",
  "displayName": "Highlight Code",
  "description": "Highlight Code For Presenting",
  "publisher": "Harshabana",
  "icon": "icon.png",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/Naraveni/VSCODE-HIGHLIGHT-CODE"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.highlightText",
        "title": "Highlight Current Line"
      },
      {
        "command": "extension.selectHighlightColor",
        "title": "Open Color Picker"
      },
      {
        "command": "extension.clearAllHiglightsInCurrentFile",
        "title": "Clear All Highlights"
      },
      {
        "command": "extension.clearHighlightForSelectedRange",
        "title": "Clear The Selected Highlight"
      },
      {"command":"extension.clearAllHighlights",
      "title": "Clear All Highlights In The Workspace"}
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "command": "extension.highlightText",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.clearAllHiglightsInCurrentFile",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.selectHighlightColor",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.clearHighlightForSelectedRange",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.clearAllHighlights",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ],
    "contributes": {
      "configuration": {
        "type": "object",
        "title": "Highlight Extension Settings",
        "properties": {
          "highlightExtension.highlightColor": {
            "type": "string",
            "default": "rgba(255,255,0,0.2)",
            "description": "The color used to highlight code lines. Accepts any valid CSS color format."
          }
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
